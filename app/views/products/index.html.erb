<h1 class="red"><%= t ".title" %></h1>

<%= link_to "New product", new_product_path if authenticated? %>

<div id="products">

  <% @products.each do |product| %>
    <div>
      <a href="/products/<%= product.id %>">
        <%= product.name %>
      </a>
      <p> <%= product.created_at.strftime('%d,%B  %Y') %> </p>
    </div>
  <% end %>
</div>
